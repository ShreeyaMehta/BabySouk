<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cart_card_img"
        android:layout_width="100dp"
        android:layout_height="130dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="20dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/cart_product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/facepalm_baby"
            android:contentDescription="Product Image" />
    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/cart_card_img"
            android:layout_toRightOf="@id/cart_card_img"
            android:text="Hooded Towels"
            android:gravity="center"/>

        <TextView
            android:id="@+id/cart_product_ages"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_toEndOf="@id/cart_card_img"
            android:layout_toRightOf="@id/cart_card_img"
            android:layout_below="@id/cart_product_name"
            android:text="Age 1-3 Years"
            android:gravity="center"/>


        <TextView
            android:id="@+id/cart_product_price"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/cart_card_img"
            android:layout_toRightOf="@id/cart_card_img"
            android:layout_below="@id/cart_product_ages"
            android:textStyle="bold"
            android:text="AED 179.0"
            android:gravity="center"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/cart_product_ages"
            android:layout_margin="20dp"
            android:src="@drawable/rubbish_can"/>

        <View
            android:id="@+id/contact_line_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/semiBlack"
            android:layout_below="@id/cart_card_img" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>