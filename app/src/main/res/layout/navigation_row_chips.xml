<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.google.android.material.chip.Chip
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="PERSONALISED SERVICES"
            android:textSize="12sp"
            android:textColor="@color/red"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:chipBackgroundColor="@color/white"
            app:chipIconTint="@color/colorPrimary"
            app:chipIcon="@drawable/ic_personalised_services_black_14dp" />

        <com.google.android.material.chip.Chip
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="ENTERTAINMENT SERVICES"
            android:textSize="12sp"
            android:textColor="@color/yellow"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:chipBackgroundColor="@color/white"
            app:chipIconTint="@color/colorPrimary"
            app:chipIcon="@drawable/ic_entertainment_black_14dp" />

        <com.google.android.material.chip.Chip
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="PERSONALISED AMENITIES"
            android:textSize="12sp"
            android:textColor="@color/green"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:chipBackgroundColor="@color/white"
            app:chipIconTint="@color/colorPrimary"
            app:chipIcon="@drawable/ic_amenieties_black_14dp" />

        <com.google.android.material.chip.Chip
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="TOYS"
            android:textSize="12sp"
            android:textColor="@color/purple"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:chipBackgroundColor="@color/white"
            app:chipIconTint="@color/colorPrimary"
            app:chipIcon="@drawable/ic_toy_black_14dp" />
    </LinearLayout>
</ScrollView>