<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".order.overview.OverviewFragment">

    <TextView
        android:id="@+id/overview_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="The Cuddledry is a baby towel that attaches to the parent like an apron, keeping you dry and allowing you to lift and wrap your baby quickly and easily. Just pop the hood over your baby's head, and simply cuddle them dry.
/n Made with supersoft bamboo and cotton, with TWO layers
 of towelling so your baby is snug and warm.  Beautifully boxed and
  luxurious quality."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/overview_details_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/overview_tv"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/overview_details_tv">
    <TableLayout
        android:id = "@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <TextView
                android:layout_weight="1"
                android:text="Brand Origin"
                android:padding="8dp"
                android:background="@drawable/table_border"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/overview_Brand_oringin_tv"
                android:text="H"
                android:layout_weight="3"
                android:padding="8dp"
                android:maxLines="4"
                android:lines="4"
                android:background="@drawable/table_border"
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <TextView
                android:layout_weight="1"
                android:text="Material"
                android:padding="8dp"
                android:background="@drawable/table_border"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/overview_material_tv"
                android:text="H"
                android:layout_weight="3"
                android:padding="8dp"
                android:lines="3"
                android:maxLines="3"
                android:background="@drawable/table_border"
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <TextView
                android:layout_weight="1"
                android:text="Dimensions"
                android:padding="8dp"
                android:background="@drawable/table_border"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/overview_dimensions_tv"
                android:text="H"
                android:layout_weight="3"
                android:padding="8dp"
                android:background="@drawable/table_border"
                android:layout_height="wrap_content"
                />
        </TableRow>

        <TableRow
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="4">
            <TextView
                android:layout_weight="1"
                android:text="Size Band"
                android:padding="8dp"
                android:background="@drawable/table_border"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/overview_size_tv"
                android:text="H"
                android:layout_weight="3"
                android:padding="8dp"
                android:background="@drawable/table_border"
                android:layout_height="wrap_content"
                />
        </TableRow>
    </TableLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>