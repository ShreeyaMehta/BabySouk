<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorOriginal</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Splash application theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Authentication application theme. -->
    <style name="AuthenticationTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Bottom navigation theme. -->
    <style name="BottomNavigationTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!--@color/active_tab_color-->
        <item name="colorPrimary">@color/colorBottomNavigationIcon</item>
    </style>

    <!-- Material Button theme. -->
    <style name="MaterialButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <!-- Customize your theme here. -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">22dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Material Text Input Theme-->
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/colorOriginal</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <!-- Rating bar Theme-->
    <style name="RatingBarAppearance" parent="Widget.Design.TextInputLayout">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <!-- Account Material Button-->
    <style name="AccountMaterialButton" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <!-- Customize your theme here. -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Continue Shopping -->
    <style name="CartMaterialButton" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <!-- Customize your theme here. -->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18dp</item>
        <item name="strokeColor">@color/transparent</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>
